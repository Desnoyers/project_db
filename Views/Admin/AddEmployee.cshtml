    <script src="~/js/main.js"></script>

    <script>
        $(document).ready(function(){

            loadData();
        });

        function loadData(){

            $selectList = $("#depName");

            $.ajax({

                url: "http://localhost:5000/api/Departments/GetAll",
                type: "GET",
                success: function(response){

                    jQuery.each(response, function(i, item){

                        var ob = new Option(item.depName, item.depName);

                        $selectList.append(ob);
                    })
                },
                error: function(error){

                    console.log(error);
                }
            });
        }
    </script>

